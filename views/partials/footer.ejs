    <script>
        // Add cursor to Title field when new task dialog is opened 
        const addTaskModal = document.getElementById('addTaskModal');
        const newTaskTitle = document.getElementById('newTaskTitle');

        addTaskModal.addEventListener('shown.bs.modal', () => {
            newTaskTitle.focus()
        });

        const projectOptions = document.querySelectorAll('.modal .dropdown-menu .project');
        const projectsSelected = document.querySelectorAll('.modal .selected.project');

        projectOptions.forEach(option => {
            option.addEventListener('click', () => { 
                toggleBadge(option.getAttribute('value'))
            });
        });

        projectsSelected.forEach(selected => { addBadgeEventListeners(selected); });

        function addBadgeEventListeners(selected) {
            selected.addEventListener('click', () => { 
                uncheckProject(selected.textContent); 
                toggleBadge(selected.textContent);
            });
        };

        function uncheckProject(projectName) {
            const projectOption = document.getElementById(`opt${projectName}`);
            if (projectOption.checked !== false) { 
                projectOption.checked = !projectOption.checked;
             };
        };

        function toggleBadge(projectName) {
            const projectsSection = document.getElementById('selectedProjects');
            const badge = projectsSection.getElementsByClassName(`${projectName}`)[0]

            if (badge) { 
                badge.remove(); 
            } 
            else { 
                //add badge HTML
                const badgeElement = `<button class="project ${projectName} selected me-1 py-2 btn bg-primary-subtle text-primary-emphasis rounded-pill fs-6" id="sel${projectName}" type="button">${projectName}</button>`;
                projectsSection.insertAdjacentHTML('beforeend', badgeElement);
                
                //add event listener to badge
                const newBadge = projectsSection.getElementsByClassName(`${projectName}`)[0]
                addBadgeEventListeners(newBadge); 
            };               
        };

    </script>

